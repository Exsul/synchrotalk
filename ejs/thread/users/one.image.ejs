<%
if (!__this.avatar)
  __this.avatar = "/assets/img/icon/user/anonymous.png";

var img =
{
  url: __this.avatar,
  classes: "ui mini rounded image",
};

__this.CascadeDesign("utils/image/abstract", img, function()
{
  this.first().click(function()
  {
    $('body').append(phoxy.DeferRender('utils/modal/image', img));
  });
});
%>
