<div class="image content">
  <div class="image">
    <% __this.CascadeDesign('utils/image/fluid', __this, function()
    {
      this.first().click(function()
      {
        __this.first().parents('.modal').modal('hide');
      })

      this.first().one('load progress', function()
      {
        __this.first().parents('.modal').modal('refresh');
      });
    }) %>
  </div>
</div>
